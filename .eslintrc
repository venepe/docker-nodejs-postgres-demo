{
  "parser": "babel-eslint",
  "extends": [
    "@strv/javascript/environments/react/v16",
    "@strv/javascript/environments/react/v15"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/webpack.common.js"
      }
    }
  },
  "rules": {
    "react/jsx-boolean-value": "error",
    "max-classes-per-file": 0,
    "import/no-named-as-default": 0,
    "react/jsx-key": "error",
    "max-len": [
      "error",
      {
        "code": 100
      }
    ],
    "import/newline-after-import": [
      "error",
      {
        "count": 2
      }
    ]
  },
  "globals": {
    "require": true,
    "process": true,
    "module": true,
    "__dirname": true,
    "describe": true,
    "it": true,
    "expect": true,
    "jest": true,
    "afterEach": true
  }
}
